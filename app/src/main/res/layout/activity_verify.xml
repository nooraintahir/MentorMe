<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#DEF8F8"
    tools:context=".VerifyActivity">

    <ImageView
        android:id="@+id/backarrow"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_marginTop="30dp"
        android:layout_marginStart="30sp"
        android:src="@drawable/backarrow"
        android:layout_gravity="start"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Verify your phone number"
        android:textColor="#157177"
        android:textSize="25sp"
        android:textStyle="bold"
        android:gravity="center"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="10sp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Weâ€™ve sent a code to "
            android:textColor="#000000"
            android:textSize="12sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="+92 321 2242022"
            android:textColor="#157177"
            android:textSize="12sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="30sp">

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:src="@drawable/oval"
                android:layout_marginEnd="5sp" />

            <TextView
                android:id="@+id/box1"
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:background="@null"
                android:padding="10dp"
                android:visibility="gone"
                android:inputType="number"
                android:layout_gravity="center" />

        </FrameLayout>


        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:src="@drawable/oval"
                android:layout_marginEnd="5sp" />

            <TextView
                android:id="@+id/box2"
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:background="@null"
                android:padding="10dp"
                android:visibility="gone"
                android:inputType="number"
                android:layout_gravity="center" />

        </FrameLayout>

        <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:src="@drawable/oval"
            android:layout_marginEnd="5sp" />

        <TextView
            android:id="@+id/box3"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:background="@null"
            android:padding="10dp"
            android:visibility="gone"
            android:inputType="number"
            android:layout_gravity="center" />

    </FrameLayout>

        <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:src="@drawable/oval"
            android:layout_marginEnd="5sp" />

        <TextView
            android:id="@+id/box4"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:background="@null"
            android:padding="10dp"
            android:visibility="gone"
            android:inputType="number"
            android:layout_gravity="center" />

        </FrameLayout>


        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:src="@drawable/oval"
                android:layout_marginEnd="5sp" />

            <TextView
                android:id="@+id/box5"
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:background="@null"
                android:padding="10dp"
                android:visibility="gone"
                android:inputType="number"
                android:layout_gravity="center" />

        </FrameLayout>
    </LinearLayout>

    <Button
        android:id="@+id/verifyphone"
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="40dp"
        android:background="@drawable/whitebox"
        android:backgroundTint="#157177"
        android:text="Verify"
        android:textColor="#FFFFFF"
        android:textSize="15sp"
        android:textAllCaps="false"
        tools:ignore="TouchTargetSizeCheck" />

    <LinearLayout
        android:id="@+id/numbers"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="10sp"
        android:layout_marginBottom="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Send code again "
            android:textColor="#000000"
            android:textSize="12sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="00:20"
            android:textColor="#157177"
            android:textSize="12sp"
            android:textStyle="bold"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="437dp"
        android:background="#50C2C9"
        android:orientation="vertical"
        android:paddingTop="30sp"
        android:paddingBottom="30sp"
        android:weightSum="4">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:gravity="center_horizontal">

            <Button
                android:id="@+id/num1"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:background="@drawable/whitebox"
                android:backgroundTint="#8FDADE"
                android:text="1"
                android:textColor="#FFFFFF"
                android:textSize="40dp"
                android:textStyle="bold"
                android:textAlignment="center"
                android:layout_marginEnd="60dp"

                />
            <Button
                android:id="@+id/num2"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:background="@drawable/whitebox"
                android:backgroundTint="#8FDADE"
                android:text="2"
                android:textColor="#FFFFFF"
                android:textSize="40dp"
                android:textStyle="bold"
                android:textAlignment="center"
                android:layout_marginEnd="60dp"

                />
            <Button
                android:id="@+id/num3"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:background="@drawable/whitebox"
                android:backgroundTint="#8FDADE"
                android:text="3"
                android:textColor="#FFFFFF"
                android:textSize="40dp"
                android:textStyle="bold"
                android:textAlignment="center"

                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:gravity="center_horizontal">

            <Button
                android:id="@+id/num4"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:background="@drawable/whitebox"
                android:backgroundTint="#8FDADE"
                android:text="4"
                android:textColor="#FFFFFF"
                android:textSize="40dp"
                android:textStyle="bold"
                android:textAlignment="center"
                android:layout_marginEnd="60dp"
                />
            <Button
                android:id="@+id/num5"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:background="@drawable/whitebox"
                android:backgroundTint="#8FDADE"
                android:text="5"
                android:textColor="#FFFFFF"
                android:textSize="40dp"
                android:textStyle="bold"
                android:textAlignment="center"
                android:layout_marginEnd="60dp"
                />
            <Button
                android:id="@+id/num6"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:background="@drawable/whitebox"
                android:backgroundTint="#8FDADE"
                android:text="6"
                android:textColor="#FFFFFF"
                android:textSize="40dp"
                android:textStyle="bold"
                android:textAlignment="center"

                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:gravity="center_horizontal">

            <Button
                android:id="@+id/num7"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:background="@drawable/whitebox"
                android:backgroundTint="#8FDADE"
                android:text="7"
                android:textColor="#FFFFFF"
                android:textSize="40dp"
                android:textStyle="bold"
                android:textAlignment="center"
                android:layout_marginEnd="60dp"
                />

            <Button
                android:id="@+id/num8"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:background="@drawable/whitebox"
                android:backgroundTint="#8FDADE"
                android:text="8"
                android:textColor="#FFFFFF"
                android:textSize="40dp"
                android:textStyle="bold"
                android:textAlignment="center"
                android:layout_marginEnd="60dp"
                />

            <Button
                android:id="@+id/num9"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:background="@drawable/whitebox"
                android:backgroundTint="#8FDADE"
                android:text="9"
                android:textColor="#FFFFFF"
                android:textSize="40dp"
                android:textStyle="bold"
                android:textAlignment="center"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:gravity="center_horizontal">

            <!-- Dummy for alignment -->
            <TextView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginEnd="60dp"
                />

            <Button
                android:id="@+id/num0"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:background="@drawable/whitebox"
                android:backgroundTint="#8FDADE"
                android:text="0"
                android:textColor="#FFFFFF"
                android:textSize="40dp"
                android:textStyle="bold"
                android:textAlignment="center"
                android:layout_marginEnd="60dp"
             />

            <ImageButton
                android:id="@+id/backspace"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/backspace"
                android:layout_gravity="right"
                android:background="@null"
                android:contentDescription="Backspace"
                />


        </LinearLayout>

    </LinearLayout>
</LinearLayout>
